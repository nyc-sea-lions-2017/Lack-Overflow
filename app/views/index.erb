
<div class="container">


  <section class="Questions">
    <ul class="collection with-header">
      <li class="collection-header"><h4 class="feature teal-text">Featured Questions</h4></li>
      <p class="q-text"> <% @question.each do |question| %> </p>

      <style type="text/css"> .q-text{
        width: 400px;
        height: auto;
        padding: 20px;
        margin: 0 auto;
      }
      </style>

        <li class="collection-item">
          <article>
            Vote Count: <%= question.votes.length %>
            <form class="up-vote" action = "/questions/<%=question.id%>/vote" method= 'post'>
              <input class="material-icons green" type='submit' value=thumb_up>
            </form>

            <form class="down-vote" action= "/questions/<%=question.id%>/downvote" method= 'post'>
              <input class="material-icons red" type='submit' value= thumb_down>
              <input type="hidden" name="_method" value="delete">
            </form>

            <a href="/questions/<%= question.id %>"><%= question.title %></a>

          </article>
        </li>
      <% end %>
    </ul>
  </section>

</div>
