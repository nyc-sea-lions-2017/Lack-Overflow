
<div class="container">

  <h1>Welcome To Lack Overflow!</h1>

  <section class="Questions">
    <h1>Commonly asked questions:</h1>
    <ul class="requested">
      <% @question.each do |question| %>
        <li class="QS">
          <article>
            Vote Count: <%= question.votes.length %>
            <form action = "/questions/<%=question.id%>/vote" method= 'post'>
              <input type='submit' value = 'Upvote'>
            </form>
      
            <a href="/questions/<%= question.id %>"><%= question.title %></a>

          </article>
        </li>
      <% end %>
    </ul>
  </section>

</div>
